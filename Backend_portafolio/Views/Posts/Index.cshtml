@model IEnumerable<ListPostViewModel>
@{
	ViewData["Title"] = "Entradas";
}

<h1>Entradas</h1>
<a asp-action="Crear" class="btn btn-primary">Crear</a>
	@foreach (var format in Model)
	{
		<h3>@format.format</h3>
		<table class="table">

			<thead>
				<tr>
					<th>Titulo</th>
					<th>Categoria</th>
					<th>Formato</th>
					<th>Creación</th>
					<th>Acciones</th>
				</tr>
			</thead>

			<tbody>
				@foreach (var post in format.posts)
				{
					<tr>
						<td>@post.title</td>
						<td>@post.categoryName</td>
						<td>@post.formatName</td>
						<td>@post.created_at.ToShortDateString()</td>
						<td>
						<a class="btn btn-primary" asp-action="Editar" asp-route-id="@post.id">Editar</a>
						<a class="btn btn-danger" onclick="openModal({id: '@post.id', name: '@post.title'})")>Borrar</a>
						</td>
					</tr>
				}
			</tbody>

		</table>
	}

@*MODAL PARA BORRAR - PASAR A UN PARTIAL*@
<div class="closeModal" id="modal">
	<div class="bgModal" onclick="closeModal()">
		<div class="modalBorrar modal-content p-4">
			<h4 id="modalMsg" class="mb-4"></h4>
			<form asp-controller="Posts" asp-action="Borrar" method="post">
				<input type="hidden" name="id" />
				<button type="submit" class="btn btn-danger">Borrar</button>
				<a class="btn btn-primary" onclick="closeModal()">Cancelar</a>
			</form>
		</div>
	</div>
</div>
