@model IEnumerable<MediaType>
@{
	ViewData["Title"] = "Tipos de Media";
}

<h1>Mediatypes</h1>
<h5>Categorias que se utilizan para organizar las entradas.</h5>

<a asp-action="Crear" class="btn btn-primary mb-3">Crear nuevo</a>

<table class="table w-100">
	<thead>
		<tr>
			<th>Media types</th>
			<th>Acciones</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var mediatype in Model)
		{
			<tr>
				<td>
					@mediatype.name
				</td>
				<td>
					<a class="btn btn-primary" asp-action="Editar" asp-route-id="@mediatype.id">Editar</a>
					<a class="btn btn-danger" onclick="openModal({id: '@mediatype.id', name: '@mediatype.name'})">Borrar</a>
				</td>
			</tr>
		}
	</tbody>

</table>

@*MODAL PARA BORRAR - PASAR A UN PARTIAL*@
<div class="closeModal" id="modal">
	<div class="bgModal" onclick="closeModal()">
		<div class="modalBorrar modal-content p-4">
			<h4 id="modalMsg" class="mb-4"></h4>
			<input type="hidden" name="id" />
			<div class="d-flex gap-2">
				<button type="submit" class="btn btn-danger" id="btnModalBorrar" onclick="verificarRespuestaModal('/Mediatype/Borrar/')">Borrar</button>
				<a class="btn btn-primary" onclick="closeModal()">Cancelar</a>
			</div>
		</div>
	</div>
</div>

@*MODAL ERROR*@
<div class="modal" id="modalError">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Error</h5>
				<button type="button" class="close" onclick="closeModalResult('modalError')">&times;</button>
			</div>
			<div class="modal-body" id="mensajeModalError">
				<!-- Mensaje de error -->
			</div>
		</div>
	</div>
</div>

@*MODAL EXITO*@
<div class="modal" id="modalSuccess">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Éxito</h5>
				<button type="button" class="close" onclick="closeModalResult('modalSuccess')>&times;</button>
			</div>
			<div class="modal-body" id="mensajeModalSuccess">
				<!-- Mensaje de éxito -->
			</div>
		</div>
	</div>
</div>