@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> MySignInManager

<ul class="navbar-nav">
    @if (MySignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-dark">
                Hola, @User.Identity.Name
            </span>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-action="logout" asp-controller="Users">
                <button type="submit" class="btn btn-action">
                    Logout
                </button>

            </form>

        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Register" asp-controller="Users">
                registro
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Login">
                Login
            </a>
        </li>
    }
</ul>