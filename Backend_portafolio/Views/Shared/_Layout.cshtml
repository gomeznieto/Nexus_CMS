    <script>

        // Obtenemos el local storage. Caso contrario, lo seteamos en false
        let currentMode = localStorage.getItem("barModeCollapse") == "true";
        if(localStorage.getItem("barModeCollapse") == null)
             localStorage.setItem("barModeCollapse", currentMode);

        // Verificamos la selección guardada por el usuario
        if(currentMode)
            actionBarCollapse();
        else
            actionBarExpand();

        // Al accionar el botón para reducir barra
        document.getElementById("btnBars").addEventListener("click", (e) =>
            {
                e.preventDefault();

               currentMode = !currentMode;
               localStorage.setItem("barModeCollapse", currentMode);

               actionBar(currentMode);
            }
        )

        /* Colpasamos la barra cuando la ventana se reduce a 570 px */
        window.addEventListener("resize", () =>
        {
            if(window.visualViewport.width < 990)
            {
                actionBarCollapse();
            }
            else{
                if(!currentMode)
                {
                    actionBarExpand();
                }
            }
        })

        // Selección menú
        let paths = []
        let items = document.querySelectorAll("#nav_items")

        // Listamos todas las páginas
        items.forEach( el => {
            paths.push("/" + el.getAttribute("path"))
        })

        //Buscamos si la página en la que nos encontramos coincide con alguno del listado
        paths.forEach((i, index) => {
            
            if(window.location.pathname.startsWith(i))
            {
                items[index].classList.add("item_subNav_bg")
            }
        })
    </script>

