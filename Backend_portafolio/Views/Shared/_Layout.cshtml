@using Microsoft.AspNetCore.Http
@using System.Text.Json;

@inject IHttpContextAccessor HttpContextAccessor

@{
    // ENTRADAS JSON
    var formatsJson = HttpContextAccessor.HttpContext.Session.GetString("Formats");
    var formats = JsonSerializer.Deserialize<List<Format>>(formatsJson);
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dashboard</title>

    <!-- STYLES -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Backend_portafolio.styles.css" asp-append-version="true" />

    <!-- EXTERNAL CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
</head>

<body >
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="menu_width px-sm-2 px-0 menu-color">
                <!-- MENU -->
                <div class="d-flex flex-column align-items-center align-items-sm-start pt-2 min-vh-100">

                    <!-- * TITULO -->
                    <a href="/" class="d-flex align-items-center justify-content-between pb-3 mb-md-0 me-md-auto text-decoration-none w-100">
                        <span class="fs-6 item_size text-white">PANEL</span> <i class="menu-hamb fa-solid fa-bars"></i>
                    </a>

                    <ul class="nav flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">

                        <!-- * HOME -->
                        <li>
                            <a href="/" class="nav-link align-middle px-3 nav-title">
                                <i class="iconos fa-solid fa-house"></i> <span class="ms-1 item_size">Home</span>
                            </a>
                        </li>

                        <!-- * POSTS -->
                        <li>
                            <a href="#subMenuPosts" data-bs-toggle="collapse" class="nav-link align-middle nav-title">
                                <i class="iconos fa-solid fa-pen"></i> <span class="ms-1 item_size">Post</span>
                            </a>

                            @if (formats != null)
                            {
                                <ul class="collapse nav flex-column ms-1 item_subNav" id="subMenuPosts" data-bs-parent="#menu">
                                    @foreach (var format in formats)
                                    {
                                        <li class="w-100">
                                            <a asp-action="Index" asp-controller="Posts" asp-route-format="@format.name" class="nav-link item_subNav px-3">
                                                <i class="subiconos fa-regular fa-circle ms-2"></i><span class="ms-2">@format.name</span>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            }
                        </li>

                        <!-- * CATEGORIES -->
                        <li>
                            <a href="#subMenuCategories" data-bs-toggle="collapse" class="nav-link align-middle nav-title">
                                <i class="iconos fa-solid fa-pen"></i> <span class="ms-1 item_size">Categoria</span>
                            </a>
                            <ul class="collapse nav flex-column ms-1" id="subMenuCategories" data-bs-parent="#menu">
                                <li class="w-100">
                                    <a asp-action="Index" asp-controller="Categorias" class="nav-link px-3 item_subNav">
                                        <span class="item_size">
                                            <i class="subiconos fa-regular fa-circle ms-2"></i><span class="ms-2">Listado</span>
                                    </span></a>
                                </li>
                                <li>
                                    <a asp-action="Crear" asp-controller="Categorias" class="nav-link px-3 item_subNav">
                                        <span class="item_size">
                                            <i class="subiconos fa-regular fa-circle ms-2"></i><span class="ms-2">Crear</span>
                                    </span></a>
                                </li>
                            </ul>
                        </li>

                        <!-- * FORMATS -->
                        <li>
                            <a href="#subMenuFormats" data-bs-toggle="collapse" class="nav-link align-middle nav-title">
                                <i class="iconos fa-solid fa-pen"></i> <span class="ms-1 item_size">Formatos</span>
                            </a>
                            <ul class="collapse nav flex-column ms-1" id="subMenuFormats" data-bs-parent="#menu">
                                <li class="w-100">
                                    <a asp-action="Index" asp-controller="Formats" class="nav-link px-3 item_subNav">
                                        <span class="item_size">
                                            <i class="subiconos fa-regular fa-circle ms-2"></i><span class="ms-2">Listado</span>
                                    </span></a>
                                </li>
                                <li>
                                    <a asp-action="Crear" asp-controller="Formats" class="nav-link px-3 item_subNav">
                                        <span class="item_size">
                                            <i class="subiconos fa-regular fa-circle ms-2"></i><span class="ms-2">Crear</span>
                                    </span></a>
                                </li>
                            </ul>
                        </li>

                        <!-- * MEDIA TYPES -->
                        <li>
                            <a href="#subMenuMediaTypes" data-bs-toggle="collapse" class="nav-link align-middle nav-title">
                                <i class="iconos fa-solid fa-pen"></i> <span class="ms-1 item_size">Tipos Media</span>
                            </a>
                            <ul class="collapse nav flex-column ms-1" id="subMenuMediaTypes" data-bs-parent="#menu">
                                <li class="w-100">
                                    <a asp-action="Index" asp-controller="Mediatype" class="nav-link px-3 item_subNav">
                                        <span class="item_size">
                                            <i class="subiconos fa-regular fa-circle ms-2"></i><span class="ms-2">Listado</span>
                                        </span>
                                    </a>
                                </li>
                                <li>
                                    <a asp-action="Crear" asp-controller="Mediatype" class="nav-link px-3 item_subNav">
                                        <span class="item_size">
                                            <i class="subiconos fa-regular fa-circle ms-2"></i><span class="ms-2">Crear</span>
                                        </span>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- SOURCES -->
                        <li>
                            <a href="#subMenuSources" data-bs-toggle="collapse" class="nav-link align-middle nav-title">
                                <i class="iconos fa-solid fa-pen"></i> <span class="ms-1 item_size">Fuentes</span>
                            </a>
                            <ul class="collapse nav flex-column ms-1" id="subMenuSources" data-bs-parent="#menu">
                                <li class="w-100">
                                    <a asp-action="Index" asp-controller="Sources" class="nav-link px-3 item_subNav">
                                        <span class="item_size">
                                            <i class="subiconos fa-regular fa-circle ms-2"></i><span class="ms-2">Listado</span>
                                        </span>
                                    </a>
                                </li>
                                <li>
                                    <a asp-action="Crear" asp-controller="Sources" class="nav-link px-3 item_subNav">
                                        <span class="item_size">
                                            <i class="subiconos fa-regular fa-circle ms-2"></i><span class="ms-2">Crear</span>
                                        </span>
                                    </a>
                                </li>
                            </ul>
                        </li>

                    </ul>
                    <hr>

                    <!-- * PROFILE -->
                    <div class="dropdown pb-4">
                        <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="https://github.com/mdo.png" alt="hugenerd" width="30" height="30" class="rounded-circle">
                            <span class="item_size mx-1">Fran</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                            <li><a class="dropdown-item" href="#">New project...</a></li>
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="#">Sign out</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- MAIN -->
            <main role="main" class="col py-3">
                <div class="container">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <!-- SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
